<div class="mainview">
  <h1>Cohort Index</h1>
  <div class="index-grid">
  <% @cohorts.each  do |c| %>
  <div class="index-cells-cohort">

    Name: &nbsp&nbsp <%= c.name %><br>
    Start Date: &nbsp &nbsp <%= c.start_date %><br>
    End Date: &nbsp &nbsp <%= c.end_date %><br>
    Course: <%= Course.find(c.course_id).name if c.course_id%><br>

    <% c.id%>
    <%= link_to "Edit", edit_cohort_path(c.id) %><br>
    <%= link_to "Create New", new_cohort_path %><br>
    
     </div>
  <% end %>
  </div>
</div>
